<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/countrycard_background">

        <TextView
            android:id="@+id/iv_main_activity_country_flag"
            android:layout_width="@dimen/emoji_width"
            android:layout_height="@dimen/emoji_height"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:autoSizeTextType="uniform"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="@string/country_name_label"
            android:textColor="@color/scorpion"
            android:textSize="@dimen/lable_textsize" />


        <TextView
            android:id="@+id/tv_main_activity_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_label_name"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/coutnry_title_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_name"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="@string/country_name_label"
            android:textColor="@color/scorpion"
            android:textSize="@dimen/lable_textsize" />

        <TextView
            android:id="@+id/tv_main_activity_country_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_label_capital"
            android:layout_gravity="end"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/details_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_capital"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="@string/country_region_label"
            android:textColor="@color/scorpion"
            android:textSize="@dimen/lable_textsize" />

        <TextView
            android:id="@+id/tv_main_activity_country_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_label_region"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:textColor="@color/mine_shaft"
            android:textSize="@dimen/details_textsize"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>