<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_main_activity_background"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_marginHorizontal="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_6" />

        <TextView
            android:id="@+id/iv_main_activity_country_flag"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:autoSizeTextType="uniform"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="Country"
            android:textColor="#575757"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_main_activity_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_label_name"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="Name"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_name"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="Capital"
            android:textColor="#575757"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_main_activity_country_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_label_capital"
            android:layout_gravity="end"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="Capital name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_capital"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="Region"
            android:textColor="#575757"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_main_activity_country_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_activity_country_label_region"
            android:layout_gravity="end"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:fontFamily="sans-serif"
            android:text="Region name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>