<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sqlite.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_childFragment"
            app:destination="@id/childFragment">
            <argument
                android:name="countryId"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/childFragment"
        android:name="com.example.sqlite.fragments.ChildFragment"
        android:label="fragment_child"
        tools:layout="@layout/fragment_child">
        <action
            android:id="@+id/action_childFragment_to_detailsFragment"
            app:destination="@id/detailsFragment">
            <argument
                android:name="countryId"
                android:defaultValue="-1"
                app:argType="integer" />
            <argument
                android:name="countryName"
                android:defaultValue=""
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.sqlite.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">

    </fragment>
</navigation>